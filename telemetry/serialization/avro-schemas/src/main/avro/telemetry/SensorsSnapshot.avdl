@namespace("ru.yandex.practicum.kafka.telemetry.event")

protocol SensorsSnapshotProtocol {

    import idl "SensorEvent.avdl";

    record SensorSnapshotAvro {
        string hubId;
        timestamp_ms timestamp;
        map<SensorStateAvro> sensorState;
    }

    record SensorStateAvro {
        timestamp_ms timestamp;
        union { ClimateSensorAvro, LightSensorAvro, MotionSensorAvro, SwitchSensorAvro, TemperatureSensorAvro } data;
    }
}